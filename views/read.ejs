<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <script>
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.toggle('hidden');
            });
        </script>
        
    </head>
    <body class="min-h-screen">
        <div class="main22 flex min-h-screen">
            <!-- Sidebar -->
            <div class="h-screen min-w-64 bg-gray-800 text-white p-7 flex-col hidden md:flex">


               

                <button id="sidebarToggle" class="md:hidden p-4 bg-gray-800 text-white">
                    <span class="material-icons">menu</span>
                </button>
                



                <div class="nav mb-10 pl-4">
                    <a class=" font-bold text-lg"> ADMIN PANEL </a>
                </div>
                <nav class="mt-4">
                    <ul>
                        <li class="p-2 hover:bg-gray-600">
                            <a href="/read">View Courses</a>
                        </li>
                        <li class="p-2 hover:bg-gray-600">
                            <a href="/">Create Course</a>
                        </li>
                        <li class="p-2 hover:bg-gray-600">
                            <a>Services</a>
                        </li>
                        <li class="p-2 hover:bg-gray-600">
                            <a>About</a>
                        </li>
                        <li class="p-2 hover:bg-gray-600">
                            <a>Contact</a>
                        </li>
                    </ul>
                </nav>
            </div>
        <div class="w-full h-full p-10 flex-justify-between overflow-auto ">
                <h1 class="text-3xl tracking-tighter mb-3 p-4 text-block text-bold">All Courses</h1>
                <hr class="w-full border-t-2 border-gray-300 m-4 ">
                <div class="users flex gap-4 flex-wrap pt-4">
                    <% if (users.length > 0 ){ %>
                        <% users.forEach(function(user){ %>
                            <div class="user w-72 rounded-lg bg-zinc-800 p-4 text-white">
                                <h3 class="text-xl tracking-tighter mt-2"><h6 class="text-white">Course Name : </h6><%= user.Coursename %></h3>
                                <h5 class="text-white"><h6 class="text-white">Department Name : </h6 ><%= user.Department %></h5>
                                <h5 class="text-white"><h6 class="text-white">Duration : </h6><%= user.Duration %></h5>
                                <h5 class="text-white"><h6 class="text-white">Eligibility : </h6><%= user.Eligibility %></h5>
                                <h5 class="text-white"><h6 class="text-white">Fees : </h6><%= user.Fees %></h5> 
                                <h5 class="text-white"><h6 class="text-white">Intake : </h6><%= user.Intake %></h5>
                                <div class="flex mt-3 justify-between">
                                    <a class="text-zinc-300" href="/edit/<%= user._id %>">Edit User</a>
                                    <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                                </div>
                            </div>
                       <% }) %>
                   <% } else { %>
                        <h3 class="text-white m-6">NO USERS YET</h3>
                  <% }%>
                   
                </div>
        </div>
    </body>
</html>